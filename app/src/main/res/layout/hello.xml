<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gh"
    tools:context=".MenuActivity">


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d9ffffff"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_home_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="foodfeed"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="10dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fff"
                android:paddingLeft="2dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_rest_logo"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/noodles_company" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/iv_rest_logo"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_rest_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="The Noodle"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/delivery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="Min Delivery : RS"
                                android:textColor="#574D4D"
                                android:textSize="8dp" />

                            <TextView
                                android:id="@+id/tv_delivery_charge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_toRightOf="@+id/delivery"
                                android:text="$25"
                                android:textColor="#574D4D"
                                android:textSize="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_toRightOf="@+id/tv_delivery_charge"
                                android:text="/ Open"
                                android:textColor="#574D4D"
                                android:textSize="8dp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="5 Star Rating"
                            android:textColor="#000" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="27Reviews"
                            android:textColor="#000" />

                    </LinearLayout>

                </RelativeLayout>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Starters"
                        android:textColor="#000"
                        android:textSize="14dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chicken Soup"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_item_name"
                            android:text="Served with all salad, sauces and bread"
                            android:textSize="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/btn_add1"
                            android:gravity="center"
                            android:text="RS 50"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btn_add1"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_item_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chicken Chowmein"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_item_name1"
                            android:text="Served with all salad, sauces and bread and coke"
                            android:textSize="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/btn_add2"
                            android:gravity="center"
                            android:text="RS 50"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btn_add2"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@color/btn_login"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_item_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beef Noodles Guacmole"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_item_name2"
                            android:text="Served with all chips and sauce"
                            android:textSize="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/btn_add11"
                            android:gravity="center"
                            android:text="RS 50"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btn_add11"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@color/btn_login"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Mains"
                        android:textColor="#000"
                        android:textSize="14dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_item_name10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Noodle Special Sauce"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_item_name10"
                            android:text="Served with all chips and sauce"
                            android:textSize="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/btn_add"
                            android:gravity="center"
                            android:text="RS 50"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="0dp"
                            android:background="@color/btn_login"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_item_name5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Prawn Noodle Bowl"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_item_name5"
                            android:text="Served with all salad, sauces and bread and coke"
                            android:textSize="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/btn_add5"
                            android:gravity="center"
                            android:text="RS 50"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btn_add5"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@color/btn_login"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_item_name6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Honey Chicken with Fried Rice"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_item_name6"
                            android:text="Served with all chips and sauce"
                            android:textSize="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/btn_add6"
                            android:gravity="center"
                            android:text="RS 50"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btn_add6"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@color/btn_login"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_item_name7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avacado Beef Chilli and Noodles"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_item_name7"
                            android:text="Served with all chips and sauce"
                            android:textSize="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/btn_add7"
                            android:gravity="center"
                            android:text="RS 50"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btn_add7"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@color/btn_login"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#fff"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/button1"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Drinks"
                            android:textColor="#000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="+"
                            android:textColor="#000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/button1"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Desserts"
                            android:textColor="#000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="+"
                            android:textColor="#000" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/custom_btn_facebook"
                        android:text="Pay" />

                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>